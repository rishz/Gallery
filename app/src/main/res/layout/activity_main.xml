<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e00ff00"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appbusters.robinkamboj.gallery.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TITLE GOES HERE"
        android:textColorHint="#ffffff"
        android:textColor="#ff00003f"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:gravity="center_horizontal"
        android:background="#00000000"
        android:cursorVisible="false"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SUBTITLE GOES HERE"
        android:textColorHint="#ffffff"
        android:textColor="#ff00003f"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/subTitle"
        android:gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:background="#00000000"
        android:cursorVisible="false"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/fab_layout"
        android:layout_below="@+id/subTitle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/ss"
            android:scaleType="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/phone"
            android:scaleType="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fab_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/fabL2"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:onClick="buttonOnClick"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/fabL"
            android:layout_margin="2dp"
            android:layout_marginRight="5dp"
            android:onClick="buttonOnClick" />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/fab"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="buttonOnClick" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_mylocation"
            android:id="@+id/fabR"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:onClick="buttonOnClick" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_compass"
            android:id="@+id/fabR2"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:onClick="buttonOnClick" />
    </LinearLayout>

</RelativeLayout>
